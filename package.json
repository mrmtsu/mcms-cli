{
  "name": "@mrmtsu/mcms-cli",
  "version": "0.2.1",
  "description": "AI/CI friendly CLI for microCMS",
  "license": "MIT",
  "type": "module",
  "bin": {
    "microcms": "dist/cli.js"
  },
  "engines": {
    "node": ">=20"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsx src/cli.ts",
    "lint": "oxlint --deny-warnings src tests vitest.config.ts",
    "format": "oxfmt --write src tests vitest.config.ts",
    "format:check": "oxfmt --check src tests vitest.config.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "microcms-document-mcp-server": "0.2.5",
    "microcms-js-sdk": "^3.1.1",
    "zod": "^3.24.1"
  },
  "optionalDependencies": {
    "keytar": "^7.9.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "oxfmt": "^0.34.0",
    "oxlint": "^1.49.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  }
}
